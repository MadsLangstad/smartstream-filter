{
  "name": "smartstream-filter",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "YouTube filter extension with advanced features",
  "scripts": {
    "dev": "vite",
    "build": "tsc && npm run build:modules && npm run build:content && npm run copy:static",
    "build:modules": "vite build",
    "build:content": "vite build --config vite.config.content.ts",
    "copy:static": "cp src/popup/popup.html dist/popup.html && cp src/onboarding/onboarding.html dist/onboarding.html && cp src/onboarding/onboarding.js dist/onboarding.js",
    "build:ext": "./build.sh",
    "build:clean": "./build.sh --clean",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.0-alpha.7",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^4.0.0-alpha.7"
  }
}